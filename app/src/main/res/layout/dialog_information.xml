<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_information"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gray_round"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_24dp"
    android:paddingBottom="@dimen/padding_12dp">

    <TextView
        android:id="@+id/informationTitle"
        style="@style/CustomTextStyle20spBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_24dp"
        android:layout_marginHorizontal="@dimen/padding_20dp"
        android:text="@string/file_information" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40dp"
        android:layout_marginHorizontal="@dimen/padding_20dp"
        android:paddingVertical="@dimen/padding_10dp">

        <TextView
            android:id="@+id/infoPathTitle"
            style="@style/CustomTextSongArtistStyle12sp"
            android:layout_width="@dimen/width_60dp"
            android:layout_height="wrap_content"
            android:text="@string/file_path"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/infoPathValue"
            style="@style/CustomTextStyleMedium14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/infoPathTitle"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40dp"
        android:layout_marginHorizontal="@dimen/padding_20dp"
        android:paddingVertical="@dimen/padding_10dp">

        <TextView
            android:id="@+id/infoNameTitle"
            style="@style/CustomTextSongArtistStyle12sp"
            android:layout_width="@dimen/width_60dp"
            android:layout_height="wrap_content"
            android:text="@string/title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/infoNameValue"
            style="@style/CustomTextStyleMedium14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/infoNameTitle"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40dp"
        android:layout_marginHorizontal="@dimen/padding_20dp"
        android:paddingVertical="@dimen/padding_10dp">

        <TextView
            android:id="@+id/infoAlbumTitle"
            style="@style/CustomTextSongArtistStyle12sp"
            android:layout_width="@dimen/width_60dp"
            android:layout_height="wrap_content"
            android:text="@string/album"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/infoAlbumValue"
            style="@style/CustomTextStyleMedium14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/infoAlbumTitle"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40dp"
        android:layout_marginHorizontal="@dimen/padding_20dp"
        android:paddingVertical="@dimen/padding_10dp">

        <TextView
            android:id="@+id/infoArtistTitle"
            style="@style/CustomTextSongArtistStyle12sp"
            android:layout_width="@dimen/width_60dp"
            android:layout_height="wrap_content"
            android:text="@string/artist"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/infoArtistValue"
            style="@style/CustomTextStyleMedium14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/infoArtistTitle"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_20dp"
        android:visibility="gone"
        android:paddingVertical="@dimen/padding_10dp">

        <TextView
            android:id="@+id/infoGenresTitle"
            style="@style/CustomTextSongArtistStyle12sp"
            android:layout_width="@dimen/width_60dp"
            android:layout_height="wrap_content"
            android:text="@string/genres"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/infoGenresValue"
            style="@style/CustomTextStyleMedium14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/infoGenresTitle"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/padding_20dp"
        android:layout_height="@dimen/height_40dp"
        android:paddingVertical="@dimen/padding_10dp">

        <TextView
            android:id="@+id/infoDurationTitle"
            style="@style/CustomTextSongArtistStyle12sp"
            android:layout_width="@dimen/width_60dp"
            android:layout_height="wrap_content"
            android:text="@string/duration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/infoDurationValue"
            style="@style/CustomTextStyleMedium14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/infoDurationTitle"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/padding_20dp"
        android:layout_height="@dimen/height_40dp"
        android:paddingVertical="@dimen/padding_10dp">

        <TextView
            android:id="@+id/infoSizeTitle"
            style="@style/CustomTextSongArtistStyle12sp"
            android:layout_width="@dimen/width_60dp"
            android:layout_height="wrap_content"
            android:text="@string/size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/infoSizeValue"
            style="@style/CustomTextStyleMedium14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/infoSizeTitle"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginStart="@dimen/padding_20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_cancel"
            style="@style/CustomSearchStyleSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:padding="@dimen/padding_12dp"
            android:text="@string/close" />

        <TextView
            android:id="@+id/text_ok"
            style="@style/CustomSearchStyleSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:paddingStart="@dimen/padding_24dp"
            android:paddingEnd="@dimen/padding_20dp"
            android:paddingVertical="@dimen/padding_12dp"
            android:text="@string/ok"
            android:textColor="?attr/textColorHighlight" />
    </LinearLayout>
</LinearLayout>